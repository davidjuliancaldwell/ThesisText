file = {:C$\backslash$:/Users/david/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Nelson, Valtcheva, Venance - 2017 - Magnitude and behavior of cross-talk effects in multichannel electrophysiology experiments.pdf:pdf},
issn = {0022-3077},
journal = {Journal of Neurophysiology},
number = {1},
pages = {574--594},
pmid = {28424297},
title = {{Magnitude and behavior of cross-talk effects in multichannel electrophysiology experiments}},
url = {http://jn.physiology.org/lookup/doi/10.1152/jn.00877.2016},
volume = {118},
year = {2017}
}
