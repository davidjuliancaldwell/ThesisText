title = {{Incorporating Feedback from Multiple Sensory Modalities Enhances Brain-Machine Interface Control}},
url = {http://www.jneurosci.org/cgi/doi/10.1523/JNEUROSCI.3967-10.2010},
volume = {30},
year = {2010}
}
