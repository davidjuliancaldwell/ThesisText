journal = {IEEE Transactions on Biomedical Engineering},
number = {10},
pages = {996--1001},
title = {{Charge density and charge per phase as cofactors in neural injury induced by electrical stimulation}},
url = {http://ieeexplore.ieee.org/document/102812/{\%}0Apapers3://publication/uuid/DAE99EA9-80E8-4FA1-A763-6754AFAE10D5 http://ieeexplore.ieee.org/document/102812/},
